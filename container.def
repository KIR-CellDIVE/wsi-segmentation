BootStrap: docker
From: tensorflow/tensorflow:2.8.0-gpu

%files
    src /opt/wsi_segmentation/src
    pyproject.toml /opt/wsi_segmentation/pyproject.toml
    README.md /opt/wsi_segmentation/src/README.md
    requirements.txt requirements.txt 

%environment
    export LISTEN_PORT=9999
    export LANG=C.UTF-8

%post
    # sys maintenance and install required system-level packages
    apt-key adv --fetch-keys https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2004/x86_64/3bf863cc.pub
    apt-get update && apt-get install -y wget python3 python3-pip gcc
    # python3.8 python3.8-venv #python3.11 python3.11-distutils python3.11-venv


    # update python3 reference
    # update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1
    # update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.8 2
    # update-alternatives --set python3 /usr/bin/python3.11
    
    #create venv and enter
    python3 -m pip --no-cache-dir install --upgrade "pip<20.3" setuptools

    # mkdir /opt/.envs
    # python3 -m venv /opt/.envs/wsi-env
    # . /opt/.envs/wsi-env/bin/activate
    # python3 -m ensurepip
    # python3 -m pip install pipreqs
    
    # install general python requirements
    # python3 -m pip install --no-cache-dir deepcell
    python3 -m pip --no-cache-dir install -r requirements.txt
    
    # install wsi_segmentation module
    python3 -m pip install /opt/wsi_segmentation
    
    # install deepcell model
    mkdir -p /.keras/models
    cd /.keras/models \
    && wget https://deepcell-data.s3-us-west-1.amazonaws.com/saved-models/MultiplexSegmentation-9.tar.gz \
    && tar -xvzf MultiplexSegmentation-9.tar.gz \
    && rm MultiplexSegmentation-9.tar.gz
    
    # install bioformats cli tools
    cd /opt \
    && wget https://downloads.openmicroscopy.org/bio-formats/6.13.0/artifacts/bftools.zip \
    && unzip bftools.zip \
    && rm bftools.zip

%runscript
    # . /opt/.envs/wsi-env/bin/activate
    jupyter lab --ip=0.0.0.0 --no-browser --port=$LISTEN_PORT --notebook-dir=notebooks

%labels
    Author jonas.mackerodt@kennedy.ox.ac.uk
    Version v0.0.1

%help
    Run this container to perfornm whole slide image segmentation using deepcell
    You should supply celldive image results folder using the -e flag such that "-e /path/to/image/folder"
